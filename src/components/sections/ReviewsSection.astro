---
import ReviewCard from '../ReviewCard.astro';
import Button from '../Button.astro';
import Icon from '../Icon.astro';

interface Review {
  rating?: number;
  text: string;
  author: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  reviews?: Review[];
  googleMapsUrl?: string;
  className?: string;
}

const {
  title = "Experiences Shared",
  subtitle = "Trusted by hundreds with **100% positive** reviews",
  reviews = [
    {
      rating: 5,
      text: "I had an amazing experience tattooing at High Contrast tattoo. I was looking for neo trad color style tattoo artists to finish an old project and Nasztia made all my dreams come true. Always when I look at my arm I have to smile because it looks exactly how I imagined it. Thank you so much for this great art, the project and the great human you are.",
